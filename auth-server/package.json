{
	"name": "auth-server",
	"version": "1.0.0",
	"description": "oauth 2.0 server for polkassembly",
	"engines": {
		"node": ">=12.16.0",
		"npm": ">=6.0.0"
	},
	"scripts": {
		"test": "docker build -f test.Dockerfile -t paritytech/polkassembly-auth-test . && docker-compose -f docker-compose-test.yaml up --renew-anon-volumes --abort-on-container-exit --exit-code-from auth-test",
		"test:dangerous": "yarn migrate && mocha -r ts-node/register test/**/*.spec.ts --exit",
		"start": "yarn tsc && yarn migrate && node build/src/index.js",
		"lint": "npx eslint ./src/ --ext .js,.ts",
		"lint:fix": "npx eslint ./src/ --ext .js,.ts --fix",
		"tsc": "tsc --resolveJsonModule",
		"migrate": "knex migrate:latest",
		"api:bump": "yarn add @polkadot/api @polkadot/util @polkadot/util-crypto @polkadot/types"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/paritytech/polkassembly.git"
	},
	"author": "Parity Team <admin@parity.io>",
